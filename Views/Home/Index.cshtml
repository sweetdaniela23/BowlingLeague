@page
@model List<Bowler>
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<table class="table table-sm table-striped table-bordered">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Middle Initial</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Phone Number</th>
        </tr>

    </thead>
    <tbody>

        @foreach (var b in ViewBag.Bowling)
        {
            <tr>
                <td>@b.BowlerFirstName</td>
                <td>@b.BowlerLastName</td>
                <td>@b.BowlerMiddleInit</td>
                <td>@b.BowlerAddress</td>
                <td>@b.BowlerCity</td>
                <td>@b.BowlerState</td>
                <td>@b.BowlerZip</td>
                <td>@b.BowlerPhoneNumber</td>

                <td><a asp-controller="Home" asp-action="Edit" asp-route-bowlerid="@b.BowlerID">Edit</a></td>
                <td><a asp-controller="Home" asp-action="Delete" asp-route-bowlerid="@b.BowlerID">Delete</a></td>
            </tr>
        }

    </tbody>
</table>
<a asp-controller="Home" asp-action="Create" class="btn btn-primary">Create</a>

